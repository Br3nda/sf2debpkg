#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

clean:
	dh_testdir
	dh_testroot
	dh_clean 

binary:
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installdebconf
	dh_installcron
	dh_installlogrotate
	dh_compress 
	dh_fixperms

	dh_installdeb

	dh_installdirs

	dh_install \
		--exclude=/.htaccess \
		--exclude=/.git/ \
		--exclude=/tests/ \
		--exclude=/doc/ \
		--exclude=/docs/ \
		--exclude=/notes/ \
		--exclude=/test-suite/ \
		--exclude=/Tests/ \
		--exclude=/documentation/ \
		--exclude=console_dev \
		--exclude=zend

	_-_RENAMEFILES_-_

	rm -rf $(CURDIR)/debian/_-_PACKAGENAME_-_-*/var/www/_-_PACKAGENAME_-_-*/app/*/cache/*
	rm -rf $(CURDIR)/debian/_-_PACKAGENAME_-_-*/var/www/_-_PACKAGENAME_-_-*/app/*/logs/*
	rm -rf $(CURDIR)/debian/_-_PACKAGENAME_-_-*/var/www/_-_PACKAGENAME_-_-*/app/*/config/dynamic.yml

	dh_link

	dh_gencontrol
	dh_md5sums

	dh_builddeb

.PHONY: build clean binary
